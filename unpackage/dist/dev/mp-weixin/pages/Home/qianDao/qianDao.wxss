.module {
	overflow: hidden;
	margin: 20rpx auto;
	width: 220rpx;
	height: 220rpx;
	border-radius: 50%;
	color: #fff;
	text-align: center;
}
.module .text {
	font-size: 20px;
	margin: 50rpx auto 10rpx;
}
.uni-timeline-item .uni-timeline-item-content {
	width: 100%;
	padding-right: 20rpx;
}
.content-show {
	width: 100%;
}
.sign-title {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	padding: 30rpx 24rpx;
	border-bottom: 1rpx solid #333;
}
.sign-title .portrait {
	width: 100rpx;
	height: 100rpx;
	line-height: 100rpx;
	border-radius: 50%;
	background-color: #007aff;
	color: #fff;
	font-size: 28rpx;
	text-align: center;
}
.sign-title .sign-title-l {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.sign-title .sign-title-l .text {
	margin-left: 20rpx;
}
.sign-title .sign-title-l .text .name {
	font-size: 32rpx;
}
.sign-title .sign-title-l .text .gz {
	color: darkblue;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: -ms-inline-flexbox;
	display: inline-flex;
}
.sign-title .sign-title-l .text .gz text {
	display: inline-block;
}
.sign-title .sign-title-l .text .gz .t1 {
	overflow: hidden; /*超出部分隐藏*/
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis; /* 超出部分显示省略号 */
	white-space: nowrap; /*规定段落中的文本不进行换行 */
	width: 166rpx; /*需要配合宽度来使用*/
}
.iswq {
	padding: 0px 12px;
	color: #99cc33;
	border: 1px solid #99cc33;
	width: 70px;
	height: 24px;
	border-radius: 4px;
	margin-left: 20rpx;
	display: inline-block;
	text-align: center;
}
